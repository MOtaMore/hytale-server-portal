{
  "name": "hytale-server-portal",
  "version": "2.0.0",
  "description": "Hytale Server Manager - Desktop application for managing Hytale servers",
  "author": "MOtaMore <notuse@motamore.com>",
  "main": "dist/main/index.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:preload\" \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:nogpu": "concurrently \"npm run dev:main\" \"npm run dev:preload\" \"npm run dev:renderer\" \"npm run dev:electron:nogpu\"",
    "dev:main": "webpack --config webpack.main.js --watch --mode development",
    "dev:preload": "webpack --config webpack.preload.js --watch --mode development",
    "dev:renderer": "webpack serve --config webpack.renderer.js --mode development",
    "dev:electron": "wait-on dist/main/index.js dist/preload/preload.js && electron . --disable-gpu --disable-software-rasterizer --remote-debugging-port=9222",
    "dev:electron:nogpu": "wait-on dist/main/index.js dist/preload/preload.js && electron . --disable-gpu --disable-software-rasterizer --disable-dev-shm-usage --no-sandbox --remote-debugging-port=9222",
    "rebuild": "npm run rebuild:all",
    "rebuild:all": "npm run rebuild:native && npm install",
    "rebuild:native": "electron-rebuild -f -w socket.io,bcryptjs",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "webpack --config webpack.main.js --mode production",
    "build:preload": "webpack --config webpack.preload.js --mode production",
    "build:renderer": "webpack --config webpack.renderer.js --mode production",
    "build:win": "npm run build && electron-builder --win",
    "build:linux": "npm run build && electron-builder --linux",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:linux": "npm run build && electron-builder --linux",
    "package:all": "npm run build && electron-builder -mwl"
  },
  "dependencies": {
    "@types/adm-zip": "^0.5.7",
    "adm-zip": "^0.5.16",
    "archiver": "^6.0.0",
    "axios": "^1.6.0",
    "bcryptjs": "^3.0.3",
    "crypto-js": "^4.1.0",
    "discord.js": "^13.17.1",
    "dotenv": "^17.2.3",
    "extract-zip": "^2.0.1",
    "jsonwebtoken": "^9.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "yauzl": "^3.2.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/crypto-js": "^4.2.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^8.2.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^6.8.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.6.0",
    "electron-is-dev": "^2.0.0",
    "electron-rebuild": "^3.2.9",
    "html-webpack-plugin": "^5.6.0",
    "style-loader": "^3.3.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.3.0",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^5.2.3"
  },
  "build": {
    "appId": "com.hytale.servermanager",
    "productName": "Hytale Server Portal",
    "files": [
      "dist/**/*",
      "resources/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "resources/icons/icon.ico"
    },
    "linux": {
      "target": [
        "deb"
      ],
      "icon": "resources/icons/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
